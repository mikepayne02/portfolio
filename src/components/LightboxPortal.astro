<light-box class='app-lightbox'>
  <div class='portal'></div>
</light-box>

<script>
  // Fix for Safari when using view transitions
  document.addEventListener('astro:page-load', () => {
    document
      .querySelectorAll<HTMLVideoElement>('video[data-lightbox-video]')
      .forEach((video) => {
        video.play()
      })
  })

  class LightBox extends HTMLElement {
    private portal: HTMLDivElement

    constructor() {
      super()
      this.portal = this.querySelector<HTMLDivElement>(
        '.portal'
      ) as HTMLDivElement
    }

    connectedCallback() {
      this.attachLightBox()
    }

    attachLightBox() {
      if (!this.portal) {
        throw new Error('Portal not found')
      }
      const lbTriggers =
        document.querySelectorAll<HTMLImageElement>('[data-lightbox]')

      lbTriggers.forEach((trig) => {
        trig.addEventListener('click', () => {
          this.portal.innerHTML = trig.innerHTML

          setTimeout(() => {
            // Adapt size attribute dynamically
            const img = this.portal.querySelectorAll('img')[0]!
            if (!img) return
            const ratio = img.naturalWidth / img.naturalHeight
            img.sizes = `${window.innerHeight * ratio}px`
          }, 352)
          this.classList.add('is-active')
          document.documentElement.classList.add('scrollIsLocked')
        })
      })

      this.addEventListener('click', () => {
        this.classList.remove('is-active')
        document.documentElement.classList.remove('scrollIsLocked')
      })

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          this.classList.remove('is-active')
          document.documentElement.classList.remove('scrollIsLocked')
        }
      })
    }
  }

  customElements.define('light-box', LightBox)
</script>

<style>
  .app-lightbox {
    position: fixed;
    top: 0;
    z-index: 99999;
    width: 100%;
    height: 100%;
    pointer-events: none;
    cursor: zoom-out;
    background-color: rgba(0, 0, 0, 0.9);
    opacity: 0;
    transition: opacity 0.35s;
  }

  .app-lightbox.is-active {
    pointer-events: initial;
    opacity: 1;
  }

  :global([data-lightbox]) {
    cursor: zoom-in;
  }

  .portal {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    transition:
      opacity 0.35s,
      transform 0.35s;
    transform: scale(0.2);
    /* object-fit: contain; */
  }

  .portal :global(img),
  .portal :global(video) {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .is-active .portal {
    transform: scale(1);
  }
</style>
