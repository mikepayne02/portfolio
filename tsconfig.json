{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "types": [
      "@cloudflare/workers-types",
      "unplugin-icons/types/astro",
      "unplugin-icons/types/react"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types": ["src/types.ts"],
      "@/db": ["src/db.ts"],
      "@/site-config": ["src/site.config.ts"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsx": "react-jsx"
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
